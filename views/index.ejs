  <body>
    <div class="container">
      <h1>URL Shortener</h1>
      <form action="/" method="POST">
        <input
          type="url"
          name="longUrl"
          placeholder="Enter long URL"
          required
        />
        <button type="submit">Shorten</button>
      </form>
      <% if (typeof shortUrl !=='undefined' && typeof longUrl !=='undefined' ) {
      %>
      <div class="short-url">
        <p>Short URL: <a href="<%= shortUrl %>"> <%= shortUrl %> </a></p>
      </div>
      <div class="long-url">
        <p>Original URL: <%= longUrl %></p>
      </div>
      <% } %>
    </div>
  </body>
</html>
